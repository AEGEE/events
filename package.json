{
  "name": "oms-events",
  "version": "0.1.0",
  "description": "Events-module of the OMS",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_ENV=test npm run db:setup && jest test/api/*.js --runInBand --forceExit",
    "lint": "node_modules/.bin/eslint lib/",
    "db:create": "sequelize db:create",
    "db:setup": "sequelize db:drop; sequelize db:create; sequelize db:migrate",
    "db:migrate": "sequelize db:migrate"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "models/**/*.js",
      "!lib/run.js",
      "!lib/sequelize.js",
      "!lib/logger.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AEGEE/oms-events.git"
  },
  "author": "Nico Westerbeck",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AEGEE/oms-events/issues"
  },
  "homepage": "https://github.com/AEGEE/oms-events#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "bugsnag": "^1.9.1",
    "deep-assign": "^2.0.0",
    "express": "^4.16.3",
    "express-promise-router": "^3.0.2",
    "express-query-boolean": "^2.0.0",
    "faker": "^4.1.0",
    "file-type": "^4.1.0",
    "fs-extra": "^2.0.0",
    "jest": "^23.6.0",
    "morgan": "^1.9.1",
    "multer": "^1.2.0",
    "node-schedule": "^1.3.0",
    "oms-common-nodejs": "git+https://git@github.com/AEGEE/oms-common-nodejs.git",
    "pg": "^7.8.0",
    "read-chunk": "^2.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.4",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "winston": "^3.0.0-rc5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-http": "^4.0.0",
    "codecov": "^3.0.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "^6.10.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^9.1.0",
    "nyc": "^11.8.0",
    "timekeeper": "^1.0.0"
  }
}
